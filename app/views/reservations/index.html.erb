<div class="container pb-5">
  <div class="row mt-5">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <% @reservations.each do |reservation| %>
          <div class="card mb-4">
            <div class="card-body d-lg-flex d-md-flex d-block align-items-center">
              <div class="p-2 mb-sm-2 reservation-station"><span><%= reservation.station.station_name %></span></div>
              <div class="reservation_time">
                <h5 class="p-2"><%= reservation.date.strftime('%Y年%m月%d日') %><%= reservation.time.strftime('%H時%M分') %></h5>
              </div>
              <div class="p-2">
              <%= link_to "詳細", reservation_path(reservation), class:"shadow btn btn-navy" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-lg-3"></div>
  </div>
</div>
